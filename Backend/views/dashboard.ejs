<% layout('layouts/boilerplate')%>
<style>
    .progress {
        height: 20px;
        margin-bottom: 15px;
    }

    .progress-bar {
        border-radius: 10px;
    }
</style>

<body class="p-3">
    <div class="container">
        <h1 class="mb-4"> <%= currentUser.username %> Dashboard</h1>
        <div class="row">
            <% data.forEach((language) => { %>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/language/content/<%= language.languageId %>"><%= language.name %></a></h5>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: <%= language.progress * 100 %>%;"
                                aria-valuenow="<%= language.progress * 100 %>" aria-valuemin="0" aria-valuemax="100">
                                <%= language.progress * 100 %>% 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
